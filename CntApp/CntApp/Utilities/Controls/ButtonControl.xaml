<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CntApp.Utilities.Controls.ButtonControl" x:Name="This"
      xmlns:extension="clr-namespace:CntApp.Utilities.Extension;assembly=CntApp"
      >
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="30"></ColumnDefinition>
        <ColumnDefinition Width="*"></ColumnDefinition>
        <ColumnDefinition Width="*"></ColumnDefinition>
    </Grid.ColumnDefinitions>
    <Image x:Name="ButtonIcon" Grid.Column="0" Margin="5,0,0,0" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="20"></Image>
    <Label LineBreakMode="NoWrap" Grid.Column="1" Text="{Binding Text, Source={x:Reference This}}"  
                   TextColor="{Binding TextColor, Source={x:Reference This}}"
                   HorizontalTextAlignment="{Binding HorizontalTextAlignment, Source={x:Reference This}}" 
                   VerticalTextAlignment= "{Binding VerticalTextAlignment, Source={x:Reference This}}" 
           Margin="{Binding TextMargin, Source={x:Reference This}}"    />
</Grid>